# ============================================
# OCKRIX Backend Environment Configuration
# ============================================
# SECURITY WARNING: Never commit the actual .env file to version control
# Copy this file to .env and update with your actual values
# ============================================

# Server Configuration
# --------------------
# Port on which the server will listen
# Default: 3000 (use 3000+ for development, avoid well-known ports like 80/443)
PORT=3000

# JWT Authentication Configuration
# --------------------------------
# SECURITY CRITICAL: Must be a strong, random secret (minimum 32 characters)
# Generate a secure secret using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# NEVER use default values in production
# Store production secrets securely (use secret management tools like AWS Secrets Manager, HashiCorp Vault)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-change-this-immediately

# Token expiration time in minutes
# Recommended: 15-60 minutes for access tokens, 7-30 days for refresh tokens
# Balance between security (shorter = more secure) and user experience (longer = less re-authentication)
TOKEN_EXPIRY_MINUTES=60

# Rate Limiting Configuration
# ---------------------------
# Time window in milliseconds for rate limiting
# Recommended: 900000 (15 minutes) or 3600000 (1 hour)
# Lower values = stricter rate limiting
RATE_LIMIT_WINDOW=900000

# Maximum number of requests allowed per window per IP
# Recommended: 100-200 requests per window for general APIs
# Adjust based on your API's expected usage patterns
RATE_LIMIT_MAX=100

# Additional Recommended Environment Variables
# --------------------------------------------
# NODE_ENV=production
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
# DATABASE_URL=your-database-connection-string
# REDIS_URL=redis://localhost:6379 (if using Redis for rate limiting)
